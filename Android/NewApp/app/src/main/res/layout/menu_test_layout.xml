<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layoutMonitor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:background="@drawable/custom_button"
        android:id="@+id/btnPopupMenu"
        android:layout_width="128dp"
        android:layout_height="59dp"
        android:layout_marginTop="44dp"
        android:text="Create Popup Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:background="@drawable/custom_button_simple"
        android:id="@+id/btnContextMenu"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:layout_marginTop="52dp"
        android:text="Select color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPopupMenu" />
</androidx.constraintlayout.widget.ConstraintLayout>