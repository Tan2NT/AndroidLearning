<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="practiceViewModel"
            type="com.tantnt.android.runstatistic.ui.practice.PracticeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.practice.PracticeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/general_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:gravity="center"
                android:text="You are not active"
                app:practiceStatusString="@{practiceViewModel.practice}"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00:00"
                app:practiceDurationFormatted="@{practiceViewModel.practice}"
                android:textColor="@color/design_default_color_secondary"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_status"
                app:layout_constraintBottom_toTopOf="@id/gridLayout"
                tools:textStyle="bold" />

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:columnCount="3"
                android:orientation="vertical"
                android:rowCount="3"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_timer">

                <TextView
                    android:layout_row="0"
                    android:layout_column="0"
                    android:gravity="center"
                    android:text="Distance"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:gravity="center"
                    android:text="0.00"
                    app:practiceDistanceString="@{practiceViewModel.practice}"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_row="2"
                    android:layout_column="0"
                    android:gravity="center"
                    android:text="Km"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="13sp" />

                <TextView
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="2"
                    android:layout_gravity="top|center"
                    android:text="Calo"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView_calo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="0.00"
                    app:practiceCaloBurnedString="@{practiceViewModel.practice}"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnWeight="2"
                    android:layout_gravity="bottom|center"
                    android:text="Kcal"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="13sp" />

                <TextView
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_gravity="right"
                    android:text="Speed"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_gravity="right"
                    android:text="0.00"
                    app:practiceSpeedString="@{practiceViewModel.practice}"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="km/h"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="13sp" />
            </GridLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/line_break"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/margin_default"
            android:background="@color/break_line_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/general_info_layout"></androidx.constraintlayout.widget.ConstraintLayout>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            map:layout_constraintBottom_toTopOf="@id/controls_layout"
            map:layout_constraintTop_toBottomOf="@id/line_break" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/controls_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/start_practice_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/start_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageButton
                android:id="@+id/pause_practice_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/pause_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/start_practice_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageButton
                android:id="@+id/stop_practice_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/stop_btn"
                app:layout_constraintStart_toStartOf="@id/start_practice_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>