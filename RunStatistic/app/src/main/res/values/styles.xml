<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryDark">@color/design_default_color_secondary_variant</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LineBreak">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="TextHeader2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextWhiteBoldRatherBig">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextWhiteBoldMedium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#E0F2F1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextWhiteMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#E0F2F1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextBlackBoldMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#050505</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextBlackMedium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#050505</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextGreenkMedium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#2E7D32</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextGreenkVeryBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">65sp</item>
        <item name="android:textColor">#2E7D32</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextOrangeBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Button-->
    <style name="GreenButton">
        <item name="android:background">#2E7D32</item>
        <item name="android:textColor">#E8EAF6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GreenRoundedButton">
        <item name="android:background">@drawable/btn_rounded_green</item>
        <item name="android:textColor">#E8EAF6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NumberTextHolo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/design_default_color_secondary_variant</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
    </style>

    <!-- Select target Dialog-->
    <style name="TargetItemDescriptionText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#050505</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/target_item_height</item>
    </style>

    <style name="TargetRadioItem">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#2E7D32</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/target_item_height</item>
    </style>

    <!-- Home Fragment - Practice info -->
    <style name="TodayPracticeItemInfo_Icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="TodayPracticeItemInfo_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#050505</item>
    </style>

    <style name="TodayPracticeItemInfo_MeasureUnit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
